<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--分割線的樣式-->
    <style name="style_listview">

        <item name="android:background">@color/white</item>
        <item name="android:divider">@color/color_e5e5e5</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/linearlayout_bg_selector</item>

    </style>

    <style name="CustomCheckboxTheme1" parent="@android:style/Widget.CompoundButton.CheckBox">

        <item name="android:button">@null</item>
        <item name="android:background">@drawable/checkbox_style1</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>
